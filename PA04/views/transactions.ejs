<!DOCTYPE html>
<html>
<head>
  <title>Transactions</title>
</head>
<body>
  <h1>Transactions</h1>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.forEach(function(transaction) { %>
        <tr>
          <td><%= transaction.date.toLocaleDateString() %></td>
          <td><%= transaction.description %></td>
          <td><%= transaction.category %></td>
          <td><%= transaction.amount.toFixed(2) %></td>
          <td>
            <form method="post" action="/transaction/remove/<%= transaction._id %>">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit">Delete</button>
            </form>
            <form method="get" action="/transaction/edit/<%= transaction._id %>">
              <button type="submit">Edit</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <a href="/transaction/add">Add a transaction</a>
  <br><br>
  <a href="/transaction/byCategory">Summarize by category</a>
</body>
</html>





